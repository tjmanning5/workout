<div class="jumbotron jumbotron-fluid">
    <div class="container-fluid">
        <div class="row">
            <div class="col-1"></div>
            <div class="col">
                <h1 class="display-4">Linear Progression</h1>
                <p class="lead">Track your weightlifting and progress!</p>
            </div>
            <div class="col">
                <div class="btn-group dropright">
                    <button class="btn btn-secondary btn-lg" type="button">
                        Individual Exercises
                    </button>
                    <button type="button" class="btn btn-lg btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Create new excerise</a>
                        {{#each exercises}}
                            <a class="dropdown-item" href="/exercise/{{this._id}}"> {{this.name}} </a>
                        {{/each}}
                    </div>
                </div>
            </div>
            <div class="col-1"></div>
        </div>
        <div class="row">
            <div class="col-1"></div>
            <div class="col">
                <h1>Workouts</h1>
                <div class="btn-group-vertical">
                    <button type="button" class="btn brn-secondary">Create a new Workout</button>
                    {{#each workouts}}
                        <button href="/workout/{{this._id}}" type="button" class="btn btn-secondary">{{this.name}}</button>
                    {{/each}}
                </div>
            </div>
            <div class="col">
                <h1>Most Recent Sets</h1>
                <div class="list-group">
                    {{#each lifts}}
                        <a href="/lift/{{this._id}}" class="list-group-item list-group-item-action flex-column align-items-start active">
                            <div class="d-flex w-100 justify-content-between">
                                {{!-- todo limit results --}}
                                {{!-- todo sort by created --}}
                                {{!-- todo No lift name --}}
                                <h5 class="mb-1">Lift Name</h5>
                                {{!-- todo format date --}}
                                <small>{{this.created}}</small>
                            </div>
                            <p class="mb-1">reps: {{this.reps}} weight: {{this.weight}}</p>
                        </a>
                    {{/each}}
                </div>
            </div>
            <div class="col-1"></div>
        </div>
    </div>
</div>